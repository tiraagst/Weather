<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tourattr_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/djem"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <TextView
        android:id="@+id/tourattr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tourattr_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="El Djem Amphitheater"
        android:textColor="#36415f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tourattr_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tourattr_name"
        android:layout_alignStart="@+id/tourattr_name"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="El Djem, Mahdia"
        android:textColor="#36415f"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@+id/tourattr_name"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="7dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward" />


</RelativeLayout>